<body>
  <h1>üèì AI Hand Tracker</h1>
  <p>Upload a video to analyze hand movements (works locally in your browser).</p>

  <input type="file" id="videoUpload" accept="video/*" />
  <br />
  <video id="video" style="display:none;"></video>
  <canvas id="output" width="640" height="480"></canvas>

  <div id="stats">
    üëã Left Hand Frames: <span id="leftCount">0</span><br />
    ‚úã Right Hand Frames: <span id="rightCount">0</span>
  </div>

  <script>
    const video = document.getElementById("video");
    const canvas = document.getElementById("output");
    const ctx = canvas.getContext("2d");
    const leftCountEl = document.getElementById("leftCount");
    const rightCountEl = document.getElementById("rightCount");

    let leftCount = 0;
    let rightCount = 0;

    // MediaPipe Hands setup
    const hands = new Hands({
      locateFile: (file) =>
        `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`,
    });

    hands.setOptions({
      maxNumHands: 2,
      modelComplexity: 1,
      minDetectionConfidence: 0.7,
      minTrackingConfidence: 0.7,
    });

    hands.onResults(onResults);

    // Handle uploaded video
    document.getElementById("videoUpload").addEventListener("change", (e) => {
      const file = e.target.files[0];
      if (file) {
        const url = URL.createObjectURL(file);
        video.src = url;
        video.load();
        video.play();
        processVideo();
      }
    });

    async function processVideo() {
      while (!video.paused && !video.ended) {
        await hands.send({ image: video });
        await new Promise((r) => requestAnimationFrame(r));
      }
    }

    function onResults(results) {
      ctx.save();
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(results.image, 0, 0, canvas.width, canvas.height);

      if (results.multiHandLandmarks && results.multiHandedness) {
        for (let i = 0; i < results.multiHandLandmarks.length; i++) {
          const classification = results.multiHandedness[i].label; // "Left" or "Right"
          const landmarks = results.multiHandLandmarks[i];

          if (classification === "Left") leftCount++;
          else rightCount++;

          drawConnectors(ctx, landmarks, HAND_CONNECTIONS, { color: "#00FF00", lineWidth: 2 });
          drawLandmarks(ctx, landmarks, { color: "#FF0000", lineWidth: 1 });
        }
      }

      leftCountEl.textContent = leftCount;
      rightCountEl.textContent = rightCount;
      ctx.restore();
    }
  </script>
</body>
</html>
